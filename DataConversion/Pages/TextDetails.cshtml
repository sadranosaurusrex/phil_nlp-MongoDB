@page
@model DataConversion.Pages.TextDetailsModel
@{
    ViewData["Title"] = "Text Details";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2>@Model.Text.Title</h2>
            <p class="text-muted">by @Model.Text.Author (@Model.Text.School)</p>
            <small>Publication Date: @Model.Text.OriginalPublicationDate | Edition Date: @Model.Text.CorpusEditionDate</small>
        </div>
        <div class="col-auto">
            <a href="/Texts" class="btn btn-secondary">Back to Texts</a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <h3>Sentences (@Model.Sentences.Count)</h3>

    <table id="sentencesTable" class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Sentence</th>
                <th>Length</th>
                <th>Lowercased</th>
                <th>Tokens</th>
                <th>Lemmatized</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Sentences.Any())
            {
                var index = 1;
                @foreach (var sentence in Model.Sentences)
                {
                    <tr>
                        <td>@index</td>
                        <td>@sentence.SentenceStr</td>
                        <td>@sentence.SentenceLength</td>
                        <td>@sentence.SentenceLowered</td>
                        <td>@string.Join(", ", sentence.TokenizedTxt)</td>
                        <td>@sentence.LemmatizedStr</td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">No sentences available.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize DataTable
            $('#sentencesTable').DataTable({
                pageLength: 25,
                lengthMenu: [10, 25, 50, 100],
                ordering: true,
                searching: true,
                responsive: true,
                columnDefs: [
                    { orderable: false, targets: 0 }
                ]
            });
        });
    </script>
}