@page
@model DataConversion.Pages.TextsModel
@{
    ViewData["Title"] = "Philosophical Texts";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2>Philosophical Texts</h2>
        </div>
        <div class="col-auto">
            <form method="post" asp-page-handler="Refresh" id="refreshForm">
                <button type="submit" class="btn btn-primary" id="refreshBtn">
                    <span id="refreshText">
                        <i class="fas fa-sync-alt"></i> Refresh Database
                    </span>
                    <span id="loadingText" style="display: none;">
                        <i class="fas fa-spinner fa-spin"></i> Processing...
                    </span>
                </button>
            </form>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <table id="textsTable" class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>School</th>
                <th>Publication Date</th>
                <th>Edition Date</th>
                <th>Sentences</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Texts.Any())
            {
                @foreach (var text in Model.Texts)
                {
                    <tr data-id="@text.PtId">
                        <td>@text.Title</td>
                        <td>@text.Author</td>
                        <td>@text.School</td>
                        <td>@text.OriginalPublicationDate</td>
                        <td>@text.CorpusEditionDate</td>
                        <td>@text.SentenceCount</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">No texts available.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Handle refresh button loading state
            $('#refreshForm').on('submit', function() {
                $('#refreshText').hide();
                $('#loadingText').show();
                $('#refreshBtn').prop('disabled', true);
            });

            // Initialize DataTable
            $('#textsTable').DataTable({
                pageLength: 20,
                lengthMenu: [10, 20, 50, 100],
                ordering: true,
                searching: true,
                responsive: true
            });

            // Make rows clickable
            $('#textsTable tbody').on('click', 'tr', function () {
                var id = $(this).data('id');
                if (id) {
                    window.location.href = '/TextDetails?id=' + id;
                }
            });
        });
    </script>
}